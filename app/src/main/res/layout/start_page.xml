<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prince"
    tools:context=".StartPage">

    <Button
        android:id="@+id/button_games"
        android:layout_width="0dp"
        android:layout_height="60dp"

        android:layout_marginBottom="410dp"
        android:height="60dp"
        android:backgroundTint="#FFF7F7"
        android:backgroundTintMode="add"
        android:fontFamily="casual"
        android:text="@string/games_page_label"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:circularflow_angles="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_about"
        app:layout_constraintStart_toStartOf="@+id/button_about"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="160dp"
        android:layout_height="60dp"

        android:layout_marginBottom="290dp"
        android:height="60dp"
        android:backgroundTint="#FFF7F7"
        android:backgroundTintMode="add"
        android:fontFamily="casual"
        android:text="@string/settings_page_label"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:circularflow_angles="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_about" />

    <Button
        android:id="@+id/button_about"
        android:layout_width="0dp"
        android:layout_height="60dp"

        android:height="60dp"
        android:backgroundTint="#FFF7F7"
        android:backgroundTintMode="add"
        android:fontFamily="casual"
        android:text="@string/about_page_label"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:circularflow_angles="10"
        app:iconSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/button_settings"
        app:layout_constraintEnd_toEndOf="@+id/button_settings"
        app:layout_constraintStart_toStartOf="@+id/button_settings"
        app:layout_constraintTop_toBottomOf="@+id/button_games" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="casual"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"
        android:shadowColor="#E91E63"
        android:shadowDx="0.5"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="#BD9CFA"
        android:textSize="48sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/button_games"
        app:layout_constraintStart_toStartOf="@+id/button_games"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>